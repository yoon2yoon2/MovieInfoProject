<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	 <settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings> 
	
	<typeAliases>
		<typeAlias type="muin.mvc.model.dto.MemberDTO" alias="member"/>
		<typeAlias type="muin.mvc.model.dto.AuthorityDTO" alias="authority"/>
		<typeAlias type="muin.mvc.model.dto.RecommendDTO" alias="recommend"/>
		<typeAlias type="muin.mvc.model.dto.MovieDTO" alias="movie"/>
	</typeAliases>
	
	<mappers>
		<mapper resource="sql/memberMapper.xml"/>
		<mapper resource="sql/authoritiesMapper.xml"/>
		<mapper resource="sql/recommendMapper.xml"/>
	</mappers>
</configuration>